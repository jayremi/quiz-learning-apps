<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFF99"
    tools:context=".MainFragment">

    <TextView
        android:textColor="#000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="20sp"
        android:drawableTop="@drawable/ic_games"
        android:text="Enter Subject of your Choosing!"

        android:gravity="center"
        android:drawablePadding="10dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/bt_english"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg"
        android:backgroundTint="#008080"
        android:textColor="#fff"
        android:text="English" />

    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_bg"
        android:textColor="#fff"
        android:id="@+id/bt_math"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF4500"

        android:text="Math" />

    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_bg"
        android:textColor="#fff"
        android:id="@+id/bt_science"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6495ED"
        android:text="Science" />


</LinearLayout>